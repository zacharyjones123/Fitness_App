<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/f416b85f09da134c5f3856bfec36ebc6"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zacharyjones.fitness_app.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome To Fitness App"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:shape= "oval"
        android:color="#ffffff"
        android:textStyle="bold"
        android:background="#caf776" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purpose"
        android:id="@+id/purpose_button"
        android:height="80dp"
        android:width="100dp"
        android:background="@color/purpose"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/weightTraining_button"
        android:layout_alignStart="@+id/weightTraining_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Training"
        android:id="@+id/weightTraining_button"
        android:layout_below="@+id/purpose_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:height="80dp"
        android:width="100dp"
        android:background="@color/weight_training" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition"
        android:id="@+id/nutrition_button"
        android:layout_below="@+id/weightTraining_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:height="80dp"
        android:width="100dp"
        android:background="@color/nutrition" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardio"
        android:id="@+id/cardio_button"
        android:layout_below="@+id/nutrition_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:height="80dp"
        android:width="100dp"
        android:background="@color/cardio" />
</RelativeLayout>
